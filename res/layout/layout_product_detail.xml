<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="10.0dp"
    android:paddingTop="10.0dp" >

    <TextView
        android:id="@+id/share_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10.0dp"
        android:paddingLeft="10.0dp"
        android:text="景点详情介绍："
        android:textColor="@color/black_text"
        android:textSize="23sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="10.0dp"
        android:layout_marginRight="10.0dp"
        android:background="@drawable/oneToEight_transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10.0dp" >

        <LinearLayout
            android:id="@+id/layout_character"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="开放时间："
                android:textColor="#7cbaff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/menu_character"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="10.0dp"
            android:background="@drawable/oneToEight_transparent" />

        <LinearLayout
            android:id="@+id/layout_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="价格："
                android:textColor="#7cbaff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/menu_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="10.0dp"
            android:background="@drawable/oneToEight_transparent" />

        <LinearLayout
            android:id="@+id/layout_ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="交通指南："
                android:textColor="#7cbaff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/menu_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="10.0dp"
            android:background="@drawable/oneToEight_transparent" />

        <LinearLayout
            android:id="@+id/layout_seasoning"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="最佳时间："
                android:textColor="#7cbaff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/menu_seasoning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="10.0dp"
            android:background="@drawable/oneToEight_transparent" />

        <LinearLayout
            android:id="@+id/layout_habitus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="咨询电话："
                android:textColor="#7cbaff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/menu_habitus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="10.0dp"
            android:background="@drawable/oneToEight_transparent" />

        <LinearLayout
            android:id="@+id/layout_progress"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="景点介绍："
                android:textColor="#7cbaff"
                android:textSize="20sp" />

            <shengzhe.haiyan.smartrs.view.AutoSplitTextView
                android:id="@+id/menu_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>